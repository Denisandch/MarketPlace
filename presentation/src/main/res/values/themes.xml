<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MarketPlace" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Surface brand color. -->
        <item name="android:colorBackground">@color/gray_white</item>
        <item name="colorOnBackground">@color/dark_blue</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/gray_white</item>
        <!-- Customize your theme here. -->
    </style>
</resources>